<% content_for(:title, "Question | QANDA") %>

<h1><%= @question.inquiry %></h1>

<% if @question.responses.any? %>
  <h4>Here are the responses for this question:</h4>

  <ul>
    <% @question.responses.each do |response| %>
      <li>
        <%= response.answer %> |
        <%= link_to "Edit", edit_question_response_path(@question, response) %> |
        <%= link_to "Delete", question_response_path(@question, response),
                                 :data => {:confirm => "Are you sure?",
                                                :method => "delete"} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no responses yet!</p>
<% end %>


<p><%= link_to "Add a response", new_question_response_path(@question) %></p>
<p><%= link_to "Edit", edit_question_path(@question) %></p>
<p><%= link_to "Delete", question_path(@question), :data => { :confirm => "Are you sure?",
                                                              :method => "delete" } %></p>
<p><%= link_to "Return to Questions", questions_path %></p>
